<?xml version="1.0" encoding="utf-8"?>



<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="viewModel"
            type="com.hmisdoctor.ui.emr_workflow.diagnosis.view_model.DiagonosisDialogViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            tools:ignore="MissingDefaultResource">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded,UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    tools:ignore="RtlHardcoded,UselessParent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Manage Favourites"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/closeImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_close_white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="20dp"
                            android:fontFamily="@font/poppins"
                            android:hint="@string/Dignosisname"
                            android:id="@+id/chiefComplaintSearch"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:textSize="17sp"
                            tools:ignore="HardcodedText"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:hint="Display Order"
                            android:id="@+id/displayorderedittext"
                            android:textSize="17sp"
                            android:inputType="number"
                            tools:ignore="HardcodedText" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="Status"
                                android:textColor="@color/primaryGrey"
                                android:textSize="14sp"
                                tools:ignore="HardcodedText" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:text="InActive"
                                    android:textColor="@color/navColor"
                                    android:textSize="15sp"
                                    tools:ignore="HardcodedText" />

                                <Switch
                                    android:id="@+id/switchCheckCheif"
                                    android:layout_width="wrap_content"
                                    android:layout_height="17dp"

                                    android:checked="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:text="Active"
                                    android:textColor="@color/navColor"
                                    android:textSize="15sp"
                                    tools:ignore="HardcodedText" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="5dp"

                                app:cardBackgroundColor="@color/colorPrimary">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_add"
                                    android:drawablePadding="10dp"
                                    android:id="@+id/diagonosisAdd"
                                    android:fontFamily="@font/poppins"
                                    android:paddingStart="15dp"
                                    android:paddingTop="5dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="5dp"
                                    android:text="Add"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    tools:ignore="HardcodedText" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="5dp"
                                android:id="@+id/clearCardView"
                                android:layout_marginStart="10dp"
                                app:cardBackgroundColor="@color/primaryGrey">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_eraser"
                                    android:drawablePadding="10dp"
                                    android:fontFamily="@font/poppins"
                                    android:paddingStart="15dp"
                                    android:paddingTop="5dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="5dp"
                                    android:text="Clear"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    tools:ignore="HardcodedText" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:animateLayoutChanges="true"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/contentLinearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/mainLinearLayout"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:background="@color/view" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="5dp"
                                    android:weightSum="4"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="5dp">


                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".50"
                                            android:padding="5dp"
                                            android:id="@+id/sNoTextView"
                                            android:text="S.No"
                                            android:fontFamily="@font/poppins_bold"
                                            android:gravity="center"
                                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.50"
                                            android:padding="5dp"
                                            android:id="@+id/textName"
                                            android:fontFamily="@font/poppins_bold"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:text="@string/Dignosisname"
                                            android:textAppearance="?android:attr/textAppearanceMedium" />
                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:padding="5dp"
                                            android:id="@+id/displayOrderTextView"
                                            android:gravity="center"
                                            android:text="Display Order"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textColor="@android:color/black" />

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="match_parent"
                                            android:textColor="@color/black"
                                            android:gravity="center"
                                            android:textSize="17sp"
                                            android:text="Action"
                                            android:fontFamily="@font/poppins_semibold"
                                            tools:ignore="HardcodedText" />



                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:background="@color/view" />

                            </LinearLayout>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/manageFavouritesRecyclerView"
                                android:layout_width="match_parent"

                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                android:layout_height="wrap_content"/>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cancelCardView"
                                android:layout_marginTop="10dp"
                                app:cardCornerRadius="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                app:cardBackgroundColor="@color/primaryGrey">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_close_white"
                                    android:drawablePadding="5dp"
                                    android:fontFamily="@font/poppins"
                                    android:paddingStart="15dp"
                                    android:paddingTop="5dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="5dp"
                                    android:text="Cancel"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    tools:ignore="HardcodedText" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/noDataFoundTextView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:visibility="gone"
                            android:text="No Data Found!"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>