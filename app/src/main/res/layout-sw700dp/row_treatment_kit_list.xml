<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/diagnosisMainLinearLayout"
    android:layout_height="60dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">
    <TextView
        android:id="@+id/diagnosisSerialNumberTextView"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_weight="0.1"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="@string/s_no"
        android:textColor="@color/black"
        android:textSize="17sp"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/view" />

    <TextView
        android:id="@+id/diagnosisCodeTextView"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_weight="0.2"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="A01.00"
        android:textColor="@color/black"
        android:textSize="17sp"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/view" />

    <TextView
        android:id="@+id/diagnosisTypeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="ICD 10"
        android:textColor="@color/black"
        android:textSize="17sp"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/view" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".35"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:layout_width="match_parent"
            android:id="@+id/diagnosisautoCompleteTextView"
            android:hint="Search with 3 letters"
            android:fontFamily="@font/poppins"
            android:drawableEnd="@drawable/ic_search"
            android:background="@drawable/background_underline"
            android:layout_height="match_parent"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/view" />

    <ImageView
        android:id="@+id/diagnosisDeleteImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight=".15"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        app:srcCompat="@drawable/ic_bin"
        />
</LinearLayout>