<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/_40sdp"
tools:ignore="MissingDefaultResource">

<data>

    <variable
        name="viewModel"
        type="com.hmisdoctor.ui.emr_workflow.diagnosis.view.snomed_dialog.SnomedDialogviewModel" />
</data>

<LinearLayout
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/manage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        tools:ignore="MissingDefaultResource">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="1265dp"
            android:layout_height="@dimen/_200sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:background="@color/hmis_background"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_weight=".9"
                    android:padding="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/Snomed_title"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    />

                <ImageView

                    android:id="@+id/closeImageView"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_weight=".1"

                    android:padding="10dp"
                    android:src="@drawable/ic_close_white"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/searchView"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="text"
                        android:layout_margin="5dp"
                        android:background="@drawable/edit_text_bottom_border"
                        app:iconifiedByDefault="false"
                        app:queryHint="@string/name" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".1"
                            android:textSize="18dp"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="@string/s_no"
                            />
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/view" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".35"
                            android:textSize="18dp"
                            android:padding="@dimen/_5sdp"
                            android:gravity="center"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Concept Id"
                            />
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/view" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".35"
                            android:textSize="18dp"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Concept Name"
                            />
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/view" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:textSize="18dp"
                            android:padding="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="@string/action"
                            android:gravity="center"
                            />
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/view" />

                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:id="@+id/mainList"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Mapping List"
                        android:textColor="@color/hmis_background"
                        android:textSize="16dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Parent Data"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".1"
                                    android:textSize="16dp"
                                    android:padding="@dimen/_5sdp"
                                    android:background="@drawable/edittext_border_white"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="@string/s_no"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".35"
                                    android:textSize="16dp"
                                    android:background="@drawable/edittext_border_white"
                                    android:padding="@dimen/_5sdp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="Concept Id"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".35"
                                    android:textSize="16dp"
                                    android:background="@drawable/edittext_border_white"
                                    android:padding="@dimen/_5sdp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="Concept Name"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".15"
                                    android:textSize="16dp"
                                    android:padding="@dimen/_5sdp"
                                    android:background="@drawable/edittext_border_white"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="@string/action"
                                    android:gravity="center"
                                    />
                            </LinearLayout>
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/parentList"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Child Data"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".1"
                                    android:textSize="16dp"
                                    android:background="@drawable/edittext_border_white"

                                    android:padding="@dimen/_5sdp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="@string/s_no"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".35"
                                    android:textSize="16dp"
                                    android:background="@drawable/edittext_border_white"
                                    android:padding="@dimen/_5sdp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="Concept Id"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".35"
                                    android:textSize="16dp"
                                    android:padding="@dimen/_5sdp"
                                    android:background="@drawable/edittext_border_white"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="Concept Name"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".15"
                                    android:textSize="16dp"
                                    android:background="@drawable/edittext_border_white"
                                    android:padding="@dimen/_5sdp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="@string/action"
                                    android:gravity="center"
                                    />
                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/childList"

                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="22dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/save"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/secondaryColor"
                            app:cardCornerRadius="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_save_white"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/poppins"
                                android:paddingStart="15dp"
                                android:paddingTop="7dp"
                                android:paddingEnd="10dp"
                                android:paddingBottom="7dp"
                                android:text="Save"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                tools:ignore="HardcodedText" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/clearCardView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            app:cardBackgroundColor="@color/primaryGrey"
                            app:cardCornerRadius="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_close_white"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/poppins"
                                android:paddingStart="15dp"
                                android:paddingTop="7dp"
                                android:paddingEnd="10dp"
                                android:paddingBottom="7dp"
                                android:text="Cancel"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                tools:ignore="HardcodedText" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
</layout>