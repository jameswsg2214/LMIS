<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLinearLayout"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".075"
                android:id="@+id/serialNumberTextView"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:text="S.No"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".15"
                android:id="@+id/codeTextView"
                android:background="@drawable/cell_shape"
                android:drawableRight="@drawable/sort"
                android:padding="5dp"
                android:text="Code"
                android:textAppearance="?android:attr/textAppearanceMedium"

                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:background="@drawable/cell_shape"
                android:drawableRight="@drawable/sort"
                android:padding="5dp"
                android:id="@+id/testNameTextView"
                android:text="Test Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".15"
                android:background="@drawable/cell_shape"
                android:drawableRight="@drawable/sort"
                android:padding="5dp"
                android:id="@+id/typeTextView"
                android:text="Type"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".275"
                android:background="@drawable/cell_shape"
                android:drawableRight="@drawable/sort"
                android:padding="5dp"
                android:id="@+id/orderToLocTextView"
                android:text="Order To Location"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/deleteImageView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_weight=".1"
                android:padding="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                app:srcCompat="@drawable/ic_bin" />

        </TableRow>

    </TableLayout>


</LinearLayout>
