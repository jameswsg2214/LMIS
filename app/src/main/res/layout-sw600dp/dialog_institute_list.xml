<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="viewModel"
            type="com.hmisdoctor.ui.institute.view_model.InstituteViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/mainLayout"
        android:background="@color/white"
        tools:ignore="MissingDefaultResource">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp"
            tools:ignore="RtlHardcoded,UselessParent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:fontFamily="@font/poppins_medium"
                android:text="Manage Institute"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/closeImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_close_white" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_2sdp"
            android:layout_height="wrap_content"
           >

            <LinearLayout
                android:id="@+id/office"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/boder"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="10dp"
                tools:ignore="UnusedAttribute">

                <Spinner
                    android:id="@+id/spinner_officelist"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:gravity="center"
                android:background="@drawable/boder"
                android:fontFamily="@font/poppins"
                android:text="@string/office"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_8ssp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_5sdp">

            <LinearLayout
                android:id="@+id/revalidationDateLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/boder"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="10dp"
                tools:ignore="UnusedAttribute">

                <Spinner
                    android:id="@+id/spinner_institution"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/revalidationDateLabelTextView"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:gravity="center"
                android:background="@drawable/boder"
                android:fontFamily="@font/poppins"
                android:text="@string/Institution_title"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_8ssp"
                tools:ignore="HardcodedText" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_5sdp">

            <LinearLayout
                android:id="@+id/deparment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/boder"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="10dp"
                tools:ignore="UnusedAttribute">

                <Spinner
                    android:id="@+id/spinner_deparment"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    />
            </LinearLayout>

            <TextView

                android:layout_width="@dimen/_55sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:background="@drawable/boder"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="@string/Department"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_8ssp"
                tools:ignore="HardcodedText" />

        </RelativeLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/_25sdp"
          android:layout_gravity="center"
          android:gravity="right"
          android:paddingEnd="@dimen/_3sdp"
          android:layout_marginTop="@dimen/_8sdp"
          android:orientation="horizontal">
          <androidx.cardview.widget.CardView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:cardCornerRadius="5dp"
              android:id="@+id/save"
              app:cardBackgroundColor="@color/secondaryColor">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawableStart="@drawable/ic_next"
                  android:drawablePadding="10dp"
                  android:fontFamily="@font/poppins"
                  android:paddingStart="15dp"
                  android:paddingTop="7dp"

                  android:paddingEnd="10dp"
                  android:paddingBottom="7dp"
                  android:text="Save"
                  android:textColor="@color/white"
                  android:textSize="16sp"
                  tools:ignore="HardcodedText" />
          </androidx.cardview.widget.CardView>

          <androidx.cardview.widget.CardView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:cardCornerRadius="5dp"
              android:id="@+id/clear"
              android:layout_marginStart="10dp"
              app:cardBackgroundColor="@color/primaryGrey">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawableStart="@drawable/ic_eraser"
                  android:drawablePadding="10dp"
                  android:fontFamily="@font/poppins"
                  android:paddingStart="15dp"
                  android:paddingTop="7dp"
                  android:paddingEnd="10dp"
                  android:paddingBottom="7dp"
                  android:text="Clear"
                  android:textColor="@color/white"
                  android:textSize="16sp"
                  tools:ignore="HardcodedText" />
          </androidx.cardview.widget.CardView>
      </LinearLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>
</layout>