<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hmisdoctor">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".application.HmisApplication"
        android:allowBackup="true"
        android:icon="@drawable/tamilnadulogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/tamilnadulogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ui.DocumentationActivity"/>

        <activity
            android:name=".ui.quick_reg.view.LabTestProcessActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".ui.quick_reg.view.LabTestActivity"

            android:windowSoftInputMode="adjustPan">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->

        </activity>

        <activity
            android:name=".ui.dashboard.view.DashBoardActivity"
             android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|adjustResize"/>


    <activity
            android:name=".ui.quick_reg.view.LabTestApprovalActivity"
            android:windowSoftInputMode="adjustPan"/>

        <activity
            android:name=".ui.quick_reg.view.QuickRegistrationActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity
            android:name=".ui.quick_reg.view.DialogPDFViewerActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity
            android:name=".ui.login.view.LoginActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.out_patient.view.OutPatientActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".ui.emr_workflow.view.EmrWorkFlowActivity"


            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".ui.configuration.view.ConfigActivity"

            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".ui.myprofile.view.MyProfileActivity"

            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".ui.dashboard.view.CovidRegistrationActivity"

            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>